/* test.wxss */
page{
  position: relative;
  height: 100%;
  width: 100%;
}
.container{
  padding: 30rpx 0rpx;
}
.container{
  position: absolute;
  left: 0px;
  top: 0px;
  right: 0px;
  bottom: 0px;
}
.bannerlist{
  display: inline-block;
  height: 63%;
  width: 100%;
  margin-right: -50px;
}
.bannerContent{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.banner_games{
  width: 80%;
  height: 100%;
  box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.3);
  margin-bottom: 30px;
}
.liker_info{
  padding: 8px 0px;
  width: 100%;
}
.gameContent{
  width: 100%;
  padding: 8px 12px;
  font-size: 12px;
  color: #999;
}
.more{
  color: black;
  position: absolute;
  right: 100px;
  bottom: 0px;
}
.stars{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
  font-size: 12px;
}
.stars image{
  width: 15px;
  height: 15px;
}
.scroll-view_H{
  white-space: nowrap;
  width: 100%;
  height: 100%;
}
.gameName{
  width: 100%;
}
.text{
  width: 100%;
  height: 43px;
  overflow: hidden;
  white-space:normal;
  word-break:break-all;
  position: relative;
}
.text::before{
  content: '...';
  background: #fff;
  display: block;
  width: 150px;
  height: 14px;
  position: absolute;
  right: 0px;
  bottom: 0px;
}